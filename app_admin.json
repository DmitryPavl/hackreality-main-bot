{
  "name": "HackReality Admin Bot",
  "description": "Admin bot for HackReality - monitoring and management",
  "repository": "https://github.com/yourusername/hackreality-bot",
  "logo": "https://via.placeholder.com/300x300/2196F3/FFFFFF?text=Admin",
  "keywords": ["telegram", "bot", "python", "admin", "monitoring"],
  "env": {
    "TELEGRAM_BOT_TOKEN": {
      "description": "Your admin Telegram bot token (same as ADMIN_BOT_TOKEN)",
      "required": true
    },
    "ADMIN_BOT_TOKEN": {
      "description": "Your admin Telegram bot token", 
      "required": true
    },
    "ADMIN_USER_ID": {
      "description": "Your Telegram user ID",
      "required": true
    },
    "ADMIN_TELEGRAM_ID": {
      "description": "Your Telegram user ID (same as ADMIN_USER_ID)",
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
